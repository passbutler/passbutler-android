<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@drawable/shape_drawer_background"
    android:paddingBottom="@dimen/default_margin_vertical"
    android:paddingLeft="@dimen/default_margin_horizontal"
    android:paddingRight="@dimen/default_margin_horizontal"
    android:paddingTop="@dimen/default_margin_vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/drawer_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:contentDescription="@string/drawer_header_description"
        android:id="@+id/imageView_drawer_header_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/drawer_header_vertical_spacing"
        android:id="@+id/textView_drawer_header_title"
        android:text="@string/drawer_header_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView_drawer_subheader_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_header_subtitle"
        />

</LinearLayout>
