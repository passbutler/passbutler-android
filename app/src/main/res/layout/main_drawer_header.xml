<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@drawable/shape_drawer_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_margin_vertical"
    android:paddingLeft="@dimen/default_margin_horizontal"
    android:paddingRight="@dimen/default_margin_horizontal"
    android:paddingTop="@dimen/default_margin_vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView_drawer_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/drawer_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView_drawer_header_title"
        style="@style/TextPassageBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/drawer_header_vertical_spacing"
        android:text="@string/drawer_header_title"
        />

    <TextView
        android:id="@+id/textView_drawer_header_subtitle"
        style="@style/TextPassage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{viewModel.username.getValue()}"
        tools:text="@string/drawer_header_subtitle"
        />

</LinearLayout>
