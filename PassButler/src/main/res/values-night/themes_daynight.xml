<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PassButler.DayNight" parent="Theme.PassButler.Base">

        <!-- Android colors: -->

        <!-- Used for backgrounds of e.g. screen: -->
        <item name="android:colorBackground">@color/grey80</item>

        <!-- Used for backgrounds of e.g. button: -->
        <item name="colorPrimary">@color/wineRedLight</item>

        <!-- Used for background of e.g. status bar: -->
        <item name="colorPrimaryDark">@color/wineRed</item>

        <!-- Used for backgrounds of e.g. floating action button: -->
        <item name="colorSecondary">@color/pointRed</item>

        <!-- Used for e.g. setting sections, checkbox, switches, progress: -->
        <item name="colorAccent">@color/pointRed</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/whiteTransparent</item>

        <!-- Material colors: -->

        <item name="colorSurface">@color/grey80</item>

        <!-- Used for semi-transparent backgrounds of e.g. progress screen: -->
        <item name="scrimBackground">@color/grey80Transparent</item>

        <!-- Used to be drawn on views to tint text/icons: -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorOnSurface">@color/grey00</item>

        <!-- Custom attributes: -->

        <item name="colorBackgroundImageTint">#4D000000</item>

    </style>

</resources>
