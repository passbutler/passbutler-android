<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PassButler.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- AppCompat widget styles: -->

        <item name="android:progressBarStyle">@style/Widget.PassButler.ProgressBar.Horizontal</item>

        <!-- Material widget styles: -->

        <item name="floatingActionButtonStyle">@style/Widget.PassButler.FloatingActionButton</item>
        <item name="materialButtonStyle">@style/Widget.PassButler.Button.Primary</item>
        <item name="textInputStyle">@style/Widget.PassButler.TextInputLayout</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.PassButler.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.PassButler.Headline2</item>

    </style>

    <style name="Theme.PassButler.Light" parent="Theme.PassButler.Base">

        <!-- Android colors: -->

        <!-- Used for backgrounds of e.g. screen: -->
        <item name="android:colorBackground">@color/whiteMedium</item>

        <!-- Used for e.g. setting sections, checkbox, switches: -->
        <item name="android:colorAccent">@color/redBrownLight</item>

        <item name="android:textColorPrimary">@color/greyMedium</item>
        <item name="android:textColorSecondary">@color/greyLight</item>

        <!-- AppCompat colors: -->

        <!-- Used for background of e.g. status bar: -->
        <item name="colorPrimaryDark">@color/redBrownDark</item>

        <!-- Material colors: -->

        <!-- Used for backgrounds of e.g. button, toolbar: -->
        <item name="colorPrimary">@color/coffeeBrown</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Used for backgrounds of e.g. floating action button: -->
        <item name="colorSecondary">@color/redBrownLight</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Custom colors: -->

        <item name="colorBackgroundProgress">@color/whiteMediumTransparent</item>

    </style>

    <style name="Theme.PassButler.Dark" parent="Theme.PassButler.Base">

        <!-- Android colors: -->

        <!-- Used for backgrounds of e.g. screen: -->
        <item name="android:colorBackground">@color/greyMedium</item>

        <!-- Used for e.g. setting sections, checkbox, switches: -->
        <item name="android:colorAccent">@color/redBrownLight</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/whiteMedium</item>

        <!-- AppCompat colors: -->

        <!-- Used for background of e.g. status bar: -->
        <item name="colorPrimaryDark">@color/redBrownDark</item>

        <!-- Material colors: -->

        <!-- Used for backgrounds of e.g. button, toolbar: -->
        <item name="colorPrimary">@color/coffeeBrown</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Used for backgrounds of e.g. floating action button: -->
        <item name="colorSecondary">@color/redBrownLight</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Custom colors: -->

        <item name="colorBackgroundProgress">@color/greyMediumTransparent</item>

    </style>

</resources>