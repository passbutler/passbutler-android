<resources>

    <style name="AppTheme"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- A fragment based toolbar is used, so no activity toolbar and/or title desired: -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light" />

    <style name="Headline"
           parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColorHint">@color/colorHeadline</item>
        <item name="android:textColor">@color/colorHeadline</item>
        <item name="android:textColorHighlight">@color/colorHeadline</item>
        <item name="android:textColorLink">@color/colorHeadline</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadlineSmall"
           parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColorHint">@color/colorHeadline</item>
        <item name="android:textColor">@color/colorHeadline</item>
        <item name="android:textColorHighlight">@color/colorHeadline</item>
        <item name="android:textColorLink">@color/colorHeadline</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPassage"
           parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/colorTextPassage</item>
        <item name="android:textColor">@color/colorTextPassage</item>
        <item name="android:textColorHighlight">@color/colorTextPassage</item>
        <item name="android:textColorLink">@color/colorTextPassage</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextPassageSmall"
           parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/colorTextPassageSmall</item>
        <item name="android:textColor">@color/colorTextPassageSmall</item>
        <item name="android:textColorHighlight">@color/colorTextPassageSmall</item>
        <item name="android:textColorLink">@color/colorTextPassageSmall</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrimaryButton"
           parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextInputLayout"
           parent="Widget.Design.TextInputLayout">
        <!-- Manually set hint color to avoid on-click color change caused by clickability of parent layout: -->
        <item name="android:textColorHint">@color/colorTextEditTextHint</item>
    </style>

    <style name="SeekBarDiscrete"
           parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <!--Widget.AppCompat.SeekBar.Discrete-->

    <!-- Special styles -->

    <style name="TextPassageBlack"
           parent="TextPassage">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
    </style>

</resources>
