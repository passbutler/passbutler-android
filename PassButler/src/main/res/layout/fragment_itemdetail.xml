<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            android:enabled="@{viewModel.isItemModificationAllowed}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/itemdetail_title_hint"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@={viewModel.title}"
                android:textAppearance="?textAppearanceHeadline1" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView_details_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            android:text="@string/itemdetail_details_header"
            android:textAppearance="?textAppearanceHeadline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            android:enabled="@{viewModel.isItemModificationAllowed}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_details_header">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/itemdetail_username_hint"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@={viewModel.username}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            android:enabled="@{viewModel.isItemModificationAllowed}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_username">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/itemdetail_password_hint"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:text="@={viewModel.password}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            android:enabled="@{viewModel.isItemModificationAllowed}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/itemdetail_url_hint"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textUri"
                android:text="@={viewModel.url}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            android:enabled="@{viewModel.isItemModificationAllowed}"
            app:counterEnabled="true"
            app:counterMaxLength="1000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_url">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/itemdetail_notes_hint"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="2"
                android:scrollbars="vertical"
                android:text="@={viewModel.notes}" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView_authorizations_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            android:text="@string/itemdetail_authorizations_header"
            android:textAppearance="?textAppearanceHeadline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_notes" />

        <TextView
            android:id="@+id/textView_authorizations_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            android:textAppearance="?textAppearanceBody1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_authorizations_header"
            tools:text="@string/itemdetail_authorizations_description_owned_item" />

        <Button
            android:id="@+id/button_manage_authorizations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            android:enabled="@{viewModel.isItemAuthorizationAvailable}"
            android:text="@string/itemdetail_authorizations_button_text"
            android:visibility="@{!viewModel.isNewItem &amp;&amp; viewModel.isItemAuthorizationAllowed ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_authorizations_description" />

        <TextView
            android:id="@+id/textView_authorizations_footer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            android:text="@string/itemdetail_authorizations_footer"
            android:textAppearance="?textAppearanceCaption"
            android:visibility="@{!viewModel.isNewItem &amp;&amp; viewModel.isItemAuthorizationAllowed &amp;&amp; !viewModel.isItemAuthorizationAvailable ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_manage_authorizations" />

        <TextView
            android:id="@+id/textView_information_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            android:text="@string/itemdetail_information_header"
            android:textAppearance="?textAppearanceHeadline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_authorizations_footer" />

        <include
            android:id="@+id/information_item_modified"
            layout="@layout/layout_information_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_information_header"
            app:title="@{@string/itemdetail_modified_title}" />

        <include
            android:id="@+id/information_item_created"
            layout="@layout/layout_information_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/information_item_modified"
            app:title="@{@string/itemdetail_created_title}" />

        <include
            android:id="@+id/information_item_id"
            layout="@layout/layout_information_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginS"
            android:layout_marginEnd="?marginM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/information_item_created"
            app:layout_constraintVertical_bias="0.0"
            app:title="@{@string/itemdetail_id_title}" />

        <TextView
            android:id="@+id/textView_delete_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            android:text="@string/itemdetail_delete_header"
            android:textAppearance="?textAppearanceHeadline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/information_item_id" />

        <Button
            android:id="@+id/button_delete_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?marginM"
            android:layout_marginTop="?marginM"
            android:layout_marginEnd="?marginM"
            android:layout_marginBottom="?marginM"
            android:enabled="@{viewModel.isItemModificationAllowed}"
            android:text="@string/itemdetail_delete_button_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_delete_header" />

        <!-- Contains all views that should be shown only for existing items (except for views `button_manage_authorizations` and `textView_authorizations_footer` that handle visibility by itself -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_existing_item_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{!viewModel.isNewItem ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="textView_authorizations_header,textView_authorizations_description,textView_information_header,information_item_modified,information_item_created,information_item_id,textView_delete_header,button_delete_item"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>