<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="de.sicherheitskritisch.passbutler.RootViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Add explicit background to hide underlaying fragments, also made container clickable to avoid touch-through underlaying fragments -->
        <!-- The `focusableInTouchMode` with `clickable` removes focus of `TextInputEditText` if user clicked outer area -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout_locked_screen_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:id="@+id/imageView_lock_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_lock_24dp"
                android:tint="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView_headline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.40"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView_headline"
                style="@style/Headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="@dimen/default_margin_vertical"
                android:text="@string/locked_screen_header"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/textView_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_lock_icon"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView_description"
                style="@style/TextPassage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="@dimen/default_margin_vertical"
                android:text="@string/locked_screen_description_password"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_headline"
                app:layout_constraintVertical_chainStyle="packed" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout_password"
                style="@style/TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toTopOf="@+id/button_unlock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_description"
                app:layout_constraintVertical_bias="0.0"
                >

                <!-- TODO: Remove hardcoded password -->
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditText_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/locked_screen_password_hint"
                    android:imeOptions="actionUnspecified"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="1234" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button_unlock"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="@dimen/large_vertical_spacing"
                android:text="@string/locked_screen_button_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_password"
                app:layout_constraintVertical_chainStyle="packed"
                />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</layout>