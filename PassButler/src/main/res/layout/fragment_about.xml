<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_header"
            style="@style/Widget.PassButler.TextView.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacingHorizontalMedium"
            android:layout_marginTop="@dimen/spacingVerticalMedium"
            android:layout_marginEnd="@dimen/spacingHorizontalMedium"
            android:text="@string/about_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_subheader"
            style="@style/Widget.PassButler.TextView.Headline.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacingHorizontalMedium"
            android:layout_marginTop="@dimen/spacingVerticalSmall"
            android:layout_marginEnd="@dimen/spacingHorizontalMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_header"
            tools:text="@string/about_subheader" />

        <TextView
            android:id="@+id/textView_passage_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacingHorizontalMedium"
            android:layout_marginTop="@dimen/spacingVerticalMedium"
            android:layout_marginEnd="@dimen/spacingHorizontalMedium"
            android:layout_marginBottom="@dimen/spacingHorizontalMedium"
            android:text="@string/about_passage_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_subheader"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>