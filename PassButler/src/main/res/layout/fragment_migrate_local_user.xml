<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- The `focusableInTouchMode` with `clickable` removes focus of `TextInputEditText` if user clicked outer area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_migrate_local_user_screen_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacingHorizontalMedium"
                android:layout_marginTop="@dimen/spacingVerticalMedium"
                android:layout_marginEnd="@dimen/spacingHorizontalMedium"
                android:text="@string/migrate_local_user_header"
                android:textAppearance="?attr/textAppearanceHeadline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_subheader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacingHorizontalMedium"
                android:layout_marginTop="@dimen/spacingVerticalMedium"
                android:layout_marginEnd="@dimen/spacingHorizontalMedium"
                android:text="@string/migrate_local_user_description"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_header" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_serverurl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacingHorizontalMedium"
                android:layout_marginTop="@dimen/spacingVerticalMedium"
                android:layout_marginEnd="@dimen/spacingHorizontalMedium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_subheader"
                app:layout_constraintVertical_bias="0.0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText_serverurl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_serverurl_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textUri" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_migrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacingHorizontalMedium"
                android:layout_marginTop="@dimen/spacingVerticalSmall"
                android:layout_marginEnd="@dimen/spacingHorizontalMedium"
                android:layout_marginBottom="@dimen/spacingVerticalMedium"
                android:text="@string/migrate_local_user_button_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_serverurl"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>